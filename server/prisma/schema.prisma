generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id       Int     @id @default(autoincrement())
  name     String
  dob      DateTime
  notes    Note[]
}

model Note {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  /// The storage key or filename of the audio file.  The actual URL is generated on demand.
  audioKey     String
  transcription String
  summary      String
  oasisM1800   String
  oasisM1810   String
  oasisM1820   String
  oasisM1830   String
  oasisM1840   String
  oasisM1850   String
  oasisM1860   String
  oasisRaw     Json
  patientId    Int
  patient      Patient  @relation(fields: [patientId], references: [id])
}